<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WorkerFragment"
    android:background="#CADAE9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CADAE9">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:text="Worker"
            android:fontFamily="@font/product_sans_bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/emailHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heading"
            android:text="Name"
            android:layout_marginLeft="25dp"
            android:textColor="@color/black"
            android:fontFamily="@font/product_sans_bold"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            />

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailHeading"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:hint="Enter the company name"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/product_sans_regular"
            android:paddingVertical="10dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/workHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameInput"
            android:text="Skills"
            android:layout_marginLeft="25dp"
            android:textColor="@color/black"
            android:fontFamily="@font/product_sans_bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/workInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/workHeading"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:hint="Plumbing, Carpentery, etc."
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/product_sans_regular"
            android:paddingVertical="10dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16sp"
            />

        <TextView
        android:id="@+id/timeHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workInput"
        android:text="Time"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/product_sans_bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />

        <EditText
            android:id="@+id/timeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timeHeading"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:hint="Set Time Period of Availability"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/product_sans_regular"
            android:paddingVertical="10dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/timeInput"
            app:layout_constraintTop_toTopOf="@id/timeInput"
            app:layout_constraintBottom_toBottomOf="@id/timeInput"
            android:src="@drawable/baseline_access_time_24"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/locationHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeInput"
            android:text="Location"
            android:layout_marginLeft="25dp"
            android:textColor="@color/black"
            android:fontFamily="@font/product_sans_bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/locationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/locationHeading"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:hint="Enter your full Address"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/product_sans_regular"
            android:paddingVertical="10dp"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:gravity="top"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/locationInput"
            android:layout_marginTop="40dp"
            android:background="@drawable/register_button"
            android:text="Next"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:paddingHorizontal="65dp"
            android:textSize="16sp"
            android:fontFamily="@font/product_sans_bold"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingVertical="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>