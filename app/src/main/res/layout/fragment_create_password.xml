<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreatePasswordFragment"
    android:background="#CADAE9">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:text="WorkLink"
        android:fontFamily="@font/product_sans_bold"
        android:textSize="30sp"
        android:textColor="#1976D2"
        />

    <TextView
        android:id="@+id/emailHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        android:text="Create Password"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/product_sans_bold"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/emailHeading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:passwordToggleTint="@color/black"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailHeading"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text"
        android:hint="Enter a new password"
        android:fontFamily="@font/product_sans_regular"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/rePasswordHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputPassword"
        android:text="Repeat Password"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/product_sans_bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/rePasswordInput00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rePasswordHeading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:passwordToggleTint="@color/black"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

    <EditText
        android:id="@+id/rePasswordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rePasswordHeading"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text"
        android:hint="Repeat the password"
        android:fontFamily="@font/product_sans_regular"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rePasswordInput00"
        android:layout_marginTop="20dp"
        android:background="@drawable/register_button"
        android:text="Register"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:paddingHorizontal="65dp"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingVertical="10dp"
        android:fontFamily="@font/product_sans_bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>