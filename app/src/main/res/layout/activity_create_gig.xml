<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGigActivity"
    android:background="#CADAE9">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CADAE9">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:text="Create a Job"
        android:fontFamily="@font/product_sans_bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/locationHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        android:text="Location"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/product_sans_bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/locationInputState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locationHeading"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text"
        android:hint="Enter your State"
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/product_sans_regular"
        android:paddingVertical="10dp"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        android:gravity="top"
        />
    <EditText
        android:id="@+id/locationInputCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/locationInputState"
        app:layout_constraintTop_toBottomOf="@id/locationHeading"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text"
        android:hint="Enter your City"
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/product_sans_regular"
        android:paddingVertical="10dp"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        android:gravity="top"
        />
    <TextView
        android:id="@+id/workHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationInputCity"
        android:text="Skills"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/product_sans_bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/workInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workHeading"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text"
        android:hint="Plumbing, Carpentery, etc."
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/product_sans_regular"
        android:paddingVertical="10dp"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workInput"
        android:text="Pay"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/product_sans_bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/payInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pay"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text"
        android:hint="Estimated Pay for Job"
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/product_sans_regular"
        android:paddingVertical="10dp"
        android:inputType="number"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payInput"
        android:text="Worker Vacancy"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/product_sans_bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/workerLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/limit"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text"
        android:hint="Vacancy for Job"
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/product_sans_regular"
        android:paddingVertical="10dp"
        android:inputType="number"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp"
        />


    <TextView
        android:id="@+id/desc_edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workerLimit"
        android:text="Job Description"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/product_sans_bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/desc_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:gravity="top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc_edt"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text"
        android:hint="Write a short Description"
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/product_sans_regular"
        android:paddingVertical="10dp"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc_input"
        app:layout_constraintBottom_toTopOf="@id/create"
        android:indeterminateTint="#0E4F90"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc_input"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/register_button"
        android:text="Create"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:paddingHorizontal="65dp"
        android:textSize="16sp"
        android:fontFamily="@font/product_sans_bold"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingVertical="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>